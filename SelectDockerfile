FROM golang:latest AS select-builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN go build -o /app/selectms ./cmd/select/main.go

# Финальный образ для auth
FROM debian AS select
WORKDIR /app
COPY --from=select-builder /app/selectms ./selectms
COPY ./configs ./configs
CMD ["./selectms"]